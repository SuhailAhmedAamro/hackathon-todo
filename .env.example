# Evolution of Todo - Environment Variables Template
# Copy this file to .env and fill in your values

# ==========================================
# PHASE 1: Console
# ==========================================
# SQLite database path
DATABASE_PATH=./data/todos.db

# ==========================================
# PHASE 2: Web Application
# ==========================================
# Backend (FastAPI)
FASTAPI_ENV=development
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
DATABASE_URL=postgresql://user:password@localhost:5432/tododb
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Frontend (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Evolution Todo

# ==========================================
# PHASE 3: Chatbot
# ==========================================
# Claude API
ANTHROPIC_API_KEY=sk-ant-xxxxx
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# MCP Server
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000

# ==========================================
# PHASE 4: Kubernetes
# ==========================================
# Docker Registry
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-username
IMAGE_TAG=latest

# Kubernetes
K8S_NAMESPACE=evolution-todo
K8S_REPLICAS=3

# ==========================================
# PHASE 5: Cloud
# ==========================================
# AWS
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
EKS_CLUSTER_NAME=evolution-todo-cluster
RDS_INSTANCE_CLASS=db.t3.micro

# GCP
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GKE_CLUSTER_NAME=evolution-todo-cluster

# Azure
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=evolution-todo-rg
AZURE_LOCATION=eastus

# ==========================================
# Common Settings
# ==========================================
# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Email (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
