# Database Configuration
DATABASE_URL=postgresql+asyncpg://todouser:todopassword@localhost:5432/tododb

# Redis Configuration (optional, for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
SECRET_KEY=your-secret-key-min-32-characters-long-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Application Settings
APP_NAME=Todo API
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Testing
TESTING=false
TEST_DATABASE_URL=postgresql+asyncpg://todouser:todopassword@localhost:5432/tododb_test

# OAuth Configuration
# Google OAuth (Get from: https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (Get from: https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth Redirect URI (must match what you configure in OAuth provider)
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback
